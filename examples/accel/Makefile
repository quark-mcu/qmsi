### Accelerometer example makefile

### Variables
APP_NAME = accel
SOC ?= quark_d2000
TARGET ?= x86
BASE_DIR := ../..
APP_DIR := .

ifeq ($(SOC),quark_se)
ifneq ($(TARGET),sensor)
$(error Supported TARGET value is 'sensor')
endif
endif

ifeq ($(IPP_LIBRARY_PATH),)
$(info If you want to use the IPP library for RMS, Variance and Mean)
$(info calculations, please run:)
$(info export IPP_LIBRARY_PATH=<Path to the IPP library>)
$(info Continuing.)
else
CFLAGS += -I$(IPP_LIBRARY_PATH)/include -D__IPP_ENABLED__=1
LDLIBS += -L$(IPP_LIBRARY_PATH)/lib -lippsq
endif

PERIPH += bmx1xx

### Make includes
include $(BASE_DIR)/examples/app.mk
